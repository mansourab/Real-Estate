{% extends 'index.html.twig' %}

{% block body %}
	<h2 class="text-center font-weight-light mt-4 mb-2">Editer l'Item</h2>

<div class="col-md-8 m-auto">
	
	{{ form_start(form) }}
		<div class="row">
			<div class="col-md-6">
				{{ form_row(form.title) }}
			</div>
			<div class="col-md-6">
				{{ form_row(form.category) }}
			</div>
		</div>

		<div class="row">
			<div class="col-md-6">
				{{ form_row(form.price) }}
			</div>
			<div class="col-md-6">
				{{ form_row(form.imageFile) }}
			</div>
		</div>
		{{ form_row(form.address) }}
		{{ form_row(form.description) }}
		<div class="row">
			<div class="col-md-4">
				{{ form_row(form.type) }}
			</div>
			<div class="col-md-4">
				{{ form_row(form.status) }}
			</div>
			<div class="col-md-2">
				{{ form_row(form.promo) }}
			</div>
			<div class="col-md-2">
				{{ form_row(form.published) }}
			</div>
		</div>
		<button class="btn btn-primary">Modifier l'item</button>
	{{ form_end(form) }}

</div>
{% endblock %}