{% extends 'index.html.twig' %}

{% block title 'Listing de tous les biens' %}

{% block body %}

    <div class="col-md-6 mt-4 mb-0 ml-auto mr-auto">
        {{ form_start(form) }}
        {{ form_row(form.q)}}
        {{ form_end(form) }}
    </div>
    
    <h2 class="mt-4 mb-4">liste des biens</h2>

    <div class="row">
        {% for item in items %}
            {% if item.published %}
                <div class="col-md-3 mb-4">
                    <div class="card" style="width: 17rem;">
                    <img src=" {{ item.image }} " alt="">
                        <div class="card-body">
                            <h5 class="card-title">{{ item.title }}</h5>
                            <h3 class="card-title text-warning"> {{ item.price | number_format(0, ',', ' ')}} Fcfa</h3>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
    <div class="navigation">
        {{ knp_pagination_render(items) }}
    </div>
{% endblock %}

