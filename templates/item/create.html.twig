{% extends 'index.html.twig' %}

{% block title 'Create an Item'%}

{% block body %}
    
    <h3 class="text-center mt-4 mb-2">Add new item</h3>
	<div class="col-md-8 m-auto">
	    
		{{ form_start(form) }}
			<div class="row">
				<div class="col-md-6">
					{{ form_row(form.title) }}
				</div>
				<div class="col-md-6">
					{{ form_row(form.category) }}
				</div>
			</div>

			<div class="row">
				<div class="col-md-6">
					{{ form_row(form.price) }}
				</div>
				<div class="col-md-6">
					{{ form_row(form.imageFile) }}
				</div>
			</div>
			{{ form_row(form.place) }}
			{{ form_row(form.description) }}
			<button class="btn btn-primary" type="submit">Ajouter un nouvel item</button>
		{{ form_end(form) }}

	</div>
{% endblock %}
